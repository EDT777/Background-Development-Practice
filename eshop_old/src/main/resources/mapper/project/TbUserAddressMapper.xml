<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.TbUserAddressDao">

	<select id="get" resultType="com.octopus.project.domain.TbUserAddressDO">
		select `id`,`user_id`,`mobile`,`country`,`province`,`city`,`area`,`address`,`contact_name`,`is_default` from tb_user_address where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.TbUserAddressDO">
		select `id`,`user_id`,`mobile`,`country`,`province`,`city`,`area`,`address`,`contact_name`,`is_default` from tb_user_address
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
		  		  <if test="country != null and country != ''"> and country = #{country} </if>
		  		  <if test="province != null and province != ''"> and province = #{province} </if>
		  		  <if test="city != null and city != ''"> and city = #{city} </if>
		  		  <if test="area != null and area != ''"> and area = #{area} </if>
		  		  <if test="address != null and address != ''"> and address = #{address} </if>
		  		  <if test="contactName != null and contactName != ''"> and contact_name = #{contactName} </if>
		  		  <if test="isDefault != null and isDefault != ''"> and is_default = #{isDefault} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_user_address
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
		  		  <if test="country != null and country != ''"> and country = #{country} </if>
		  		  <if test="province != null and province != ''"> and province = #{province} </if>
		  		  <if test="city != null and city != ''"> and city = #{city} </if>
		  		  <if test="area != null and area != ''"> and area = #{area} </if>
		  		  <if test="address != null and address != ''"> and address = #{address} </if>
		  		  <if test="contactName != null and contactName != ''"> and contact_name = #{contactName} </if>
		  		  <if test="isDefault != null and isDefault != ''"> and is_default = #{isDefault} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.TbUserAddressDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_user_address
		(
			`user_id`, 
			`mobile`, 
			`country`, 
			`province`, 
			`city`, 
			`area`, 
			`address`, 
			`contact_name`, 
			`is_default`
		)
		values
		(
			#{userId}, 
			#{mobile}, 
			#{country}, 
			#{province}, 
			#{city}, 
			#{area}, 
			#{address}, 
			#{contactName}, 
			#{isDefault}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.TbUserAddressDO">
		update tb_user_address 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="country != null">`country` = #{country}, </if>
			<if test="province != null">`province` = #{province}, </if>
			<if test="city != null">`city` = #{city}, </if>
			<if test="area != null">`area` = #{area}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="contactName != null">`contact_name` = #{contactName}, </if>
			<if test="isDefault != null">`is_default` = #{isDefault}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from tb_user_address where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_user_address where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>