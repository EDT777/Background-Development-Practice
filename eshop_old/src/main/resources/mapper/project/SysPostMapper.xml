<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.SysPostDao">

	<select id="get" resultType="com.octopus.project.domain.SysPostDO">
		select `post_id`,`name`,`order_num`,`del_flag` from sys_post where post_id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.SysPostDO">
		select `post_id`,`name`,`order_num`,`del_flag` from sys_post
        <where>  
		  		  <if test="postId != null and postId != ''"> and post_id = #{postId} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="orderNum != null and orderNum != ''"> and order_num = #{orderNum} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by post_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_post
		 <where>  
		  		  <if test="postId != null and postId != ''"> and post_id = #{postId} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="orderNum != null and orderNum != ''"> and order_num = #{orderNum} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.SysPostDO" useGeneratedKeys="true" keyProperty="postId">
		insert into sys_post
		(
			`name`, 
			`order_num`, 
			`del_flag`
		)
		values
		(
			#{name}, 
			#{orderNum}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.SysPostDO">
		update sys_post 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="orderNum != null">`order_num` = #{orderNum}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where post_id = #{postId}
	</update>
	
	<delete id="remove">
		delete from sys_post where post_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_post where post_id in 
		<foreach item="postId" collection="array" open="(" separator="," close=")">
			#{postId}
		</foreach>
	</delete>

</mapper>