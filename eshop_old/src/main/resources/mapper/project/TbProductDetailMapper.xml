<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.TbProductDetailDao">

	<select id="get" resultType="com.octopus.project.domain.TbProductDetailDO">
		select `id`,`product_id`,`detail_html` from tb_product_detail where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.TbProductDetailDO">
		select `id`,`product_id`,`detail_html` from tb_product_detail
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="detailHtml != null and detailHtml != ''"> and detail_html = #{detailHtml} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_product_detail
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="detailHtml != null and detailHtml != ''"> and detail_html = #{detailHtml} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.TbProductDetailDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_product_detail
		(
			`product_id`, 
			`detail_html`
		)
		values
		(
			#{productId}, 
			#{detailHtml}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.TbProductDetailDO">
		update tb_product_detail 
		<set>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="detailHtml != null">`detail_html` = #{detailHtml}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from tb_product_detail where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_product_detail where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>