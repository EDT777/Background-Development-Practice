<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.TbProductAttributeDao">

	<select id="get" resultType="com.octopus.project.domain.TbProductAttributeDO">
		select `id`,`product_id`,`attribute_name`,`attribute_value` from tb_product_attribute where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.TbProductAttributeDO">
		select `id`,`product_id`,`attribute_name`,`attribute_value` from tb_product_attribute
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="attributeName != null and attributeName != ''"> and attribute_name = #{attributeName} </if>
		  		  <if test="attributeValue != null and attributeValue != ''"> and attribute_value = #{attributeValue} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_product_attribute
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="attributeName != null and attributeName != ''"> and attribute_name = #{attributeName} </if>
		  		  <if test="attributeValue != null and attributeValue != ''"> and attribute_value = #{attributeValue} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.TbProductAttributeDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_product_attribute
		(
			`product_id`, 
			`attribute_name`, 
			`attribute_value`
		)
		values
		(
			#{productId}, 
			#{attributeName}, 
			#{attributeValue}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.TbProductAttributeDO">
		update tb_product_attribute 
		<set>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="attributeName != null">`attribute_name` = #{attributeName}, </if>
			<if test="attributeValue != null">`attribute_value` = #{attributeValue}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from tb_product_attribute where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_product_attribute where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>