<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.SysUserPlusDao">

	<select id="get" resultType="com.octopus.project.domain.SysUserPlusDO">
		select `id`,`user_id`,`payment` from sys_user_plus where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.SysUserPlusDO">
		select `id`,`user_id`,`payment` from sys_user_plus
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="payment != null and payment != ''"> and payment = #{payment} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_user_plus
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="payment != null and payment != ''"> and payment = #{payment} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.SysUserPlusDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_user_plus
		(
			`user_id`, 
			`payment`
		)
		values
		(
			#{userId}, 
			#{payment}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.SysUserPlusDO">
		update sys_user_plus 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="payment != null">`payment` = #{payment}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from sys_user_plus where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_user_plus where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>