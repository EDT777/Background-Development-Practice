<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.TbProductTypeDao">

	<select id="get" resultType="com.octopus.project.domain.TbProductTypeDO">
		select `id`,`type_name`,`parent_id`,`icon_class`,`create_by`,`gmt_create`,`update_by`,`gmt_update` from tb_product_type where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.TbProductTypeDO">
		select `id`,`type_name`,`parent_id`,`icon_class`,`create_by`,`gmt_create`,`update_by`,`gmt_update` from tb_product_type
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="typeName != null and typeName != ''"> and type_name = #{typeName} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		  <if test="iconClass != null and iconClass != ''"> and icon_class = #{iconClass} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="gmtUpdate != null and gmtUpdate != ''"> and gmt_update = #{gmtUpdate} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_product_type
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="typeName != null and typeName != ''"> and type_name = #{typeName} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		  <if test="iconClass != null and iconClass != ''"> and icon_class = #{iconClass} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="gmtCreate != null and gmtCreate != ''"> and gmt_create = #{gmtCreate} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="gmtUpdate != null and gmtUpdate != ''"> and gmt_update = #{gmtUpdate} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.TbProductTypeDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_product_type
		(
			`type_name`, 
			`parent_id`, 
			`icon_class`, 
			`create_by`, 
			`gmt_create`, 
			`update_by`, 
			`gmt_update`
		)
		values
		(
			#{typeName}, 
			#{parentId}, 
			#{iconClass}, 
			#{createBy}, 
			#{gmtCreate}, 
			#{updateBy}, 
			#{gmtUpdate}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.TbProductTypeDO">
		update tb_product_type 
		<set>
			<if test="typeName != null">`type_name` = #{typeName}, </if>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="iconClass != null">`icon_class` = #{iconClass}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="gmtCreate != null">`gmt_create` = #{gmtCreate}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="gmtUpdate != null">`gmt_update` = #{gmtUpdate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from tb_product_type where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_product_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>