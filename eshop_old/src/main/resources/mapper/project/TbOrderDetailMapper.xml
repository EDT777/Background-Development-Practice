<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.TbOrderDetailDao">

	<select id="get" resultType="com.octopus.project.domain.TbOrderDetailDO">
		select `id`,`order_id`,`product_id`,`count`,`price`,`total_price`,`discount_price` from tb_order_detail where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.TbOrderDetailDO">
		select `id`,`order_id`,`product_id`,`count`,`price`,`total_price`,`discount_price` from tb_order_detail
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="orderId != null and orderId != ''"> and order_id = #{orderId} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="count != null and count != ''"> and count = #{count} </if>
		  		  <if test="price != null and price != ''"> and price = #{price} </if>
		  		  <if test="totalPrice != null and totalPrice != ''"> and total_price = #{totalPrice} </if>
		  		  <if test="discountPrice != null and discountPrice != ''"> and discount_price = #{discountPrice} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_order_detail
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="orderId != null and orderId != ''"> and order_id = #{orderId} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="count != null and count != ''"> and count = #{count} </if>
		  		  <if test="price != null and price != ''"> and price = #{price} </if>
		  		  <if test="totalPrice != null and totalPrice != ''"> and total_price = #{totalPrice} </if>
		  		  <if test="discountPrice != null and discountPrice != ''"> and discount_price = #{discountPrice} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.TbOrderDetailDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_order_detail
		(
			`order_id`, 
			`product_id`, 
			`count`, 
			`price`, 
			`total_price`, 
			`discount_price`
		)
		values
		(
			#{orderId}, 
			#{productId}, 
			#{count}, 
			#{price}, 
			#{totalPrice}, 
			#{discountPrice}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.TbOrderDetailDO">
		update tb_order_detail 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="count != null">`count` = #{count}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="totalPrice != null">`total_price` = #{totalPrice}, </if>
			<if test="discountPrice != null">`discount_price` = #{discountPrice}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from tb_order_detail where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_order_detail where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>