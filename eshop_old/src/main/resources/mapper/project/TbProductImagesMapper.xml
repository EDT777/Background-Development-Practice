<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.TbProductImagesDao">

	<select id="get" resultType="com.octopus.project.domain.TbProductImagesDO">
		select `id`,`product_id`,`image_url`,`content_type`,`order` from tb_product_images where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.TbProductImagesDO">
		select `id`,`product_id`,`image_url`,`content_type`,`order` from tb_product_images
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="imageUrl != null and imageUrl != ''"> and image_url = #{imageUrl} </if>
		  		  <if test="contentType != null and contentType != ''"> and content_type = #{contentType} </if>
		  		  <if test="order != null and order != ''"> and order = #{order} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_product_images
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productId != null and productId != ''"> and product_id = #{productId} </if>
		  		  <if test="imageUrl != null and imageUrl != ''"> and image_url = #{imageUrl} </if>
		  		  <if test="contentType != null and contentType != ''"> and content_type = #{contentType} </if>
		  		  <if test="order != null and order != ''"> and order = #{order} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.TbProductImagesDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_product_images
		(
			`product_id`, 
			`image_url`, 
			`content_type`, 
			`order`
		)
		values
		(
			#{productId}, 
			#{imageUrl}, 
			#{contentType}, 
			#{order}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.TbProductImagesDO">
		update tb_product_images 
		<set>
			<if test="productId != null">`product_id` = #{productId}, </if>
			<if test="imageUrl != null">`image_url` = #{imageUrl}, </if>
			<if test="contentType != null">`content_type` = #{contentType}, </if>
			<if test="order != null">`order` = #{order}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from tb_product_images where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_product_images where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>