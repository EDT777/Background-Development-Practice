<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.octopus.project.dao.SysDeptPostDao">

	<select id="get" resultType="com.octopus.project.domain.SysDeptPostDO">
		select `id`,`dept_id`,`post_id`,`parent_id` from sys_dept_post where id = #{value}
	</select>

	<select id="list" resultType="com.octopus.project.domain.SysDeptPostDO">
		select `id`,`dept_id`,`post_id`,`parent_id` from sys_dept_post
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
		  		  <if test="postId != null and postId != ''"> and post_id = #{postId} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_dept_post
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
		  		  <if test="postId != null and postId != ''"> and post_id = #{postId} </if>
		  		  <if test="parentId != null and parentId != ''"> and parent_id = #{parentId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.octopus.project.domain.SysDeptPostDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_dept_post
		(
			`dept_id`, 
			`post_id`, 
			`parent_id`
		)
		values
		(
			#{deptId}, 
			#{postId}, 
			#{parentId}
		)
	</insert>
	 
	<update id="update" parameterType="com.octopus.project.domain.SysDeptPostDO">
		update sys_dept_post 
		<set>
			<if test="deptId != null">`dept_id` = #{deptId}, </if>
			<if test="postId != null">`post_id` = #{postId}, </if>
			<if test="parentId != null">`parent_id` = #{parentId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from sys_dept_post where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_dept_post where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>